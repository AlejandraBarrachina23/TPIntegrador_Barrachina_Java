package Negocio;
import java.sql.SQLException;
import java.util.ArrayList;
import DAO.MateriaDAO;
import Dominio.Materia;

public class MateriaNegocio implements INegocioMateria {

	private MateriaDAO unaMateriaDAO = new MateriaDAO();
	
	public MateriaNegocio(MateriaDAO unaMateriaDAO) {
		
		this.unaMateriaDAO = unaMateriaDAO;
		
	}
	
	public ArrayList<Materia> ListadoMaterias(){
		
		try {
			return (ArrayList<Materia>)unaMateriaDAO.ListadoMateria();
		} 
		
		catch (SQLException e) {
			e.printStackTrace();
		}
		
	}
	
}
