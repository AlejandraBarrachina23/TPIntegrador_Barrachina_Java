public class serveletReportes extends HttpServlet {
	private static final long serialVersionUID = 1L;

    public serveletReportes() {
        super();
    }

	protected void doGet(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {

	}

	protected void doPost(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		
		if(request.getParameter("btnBuscar")!=null) {
			
			CursoNegocio unCursoNegocio = new CursoNegocio();
			Curso CursoSeleccionado = new Curso();
			unCursoNegocio.AlumnosxCurso(CursoSeleccionado)
			System.out.println(request.getParameter("cboxMaterias"));
			System.out.println(request.getParameter("cboxSemestre"));
			System.out.println(request.getParameter("anio"));
		}
	}

}
