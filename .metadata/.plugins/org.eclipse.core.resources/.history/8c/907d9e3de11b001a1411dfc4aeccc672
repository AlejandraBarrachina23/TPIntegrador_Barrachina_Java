<script>

	$(document).ready( function () {
	    $('#table_id').DataTable();
	} );
	
	$("td").click(function(){
		
		let Materia = ($(this).parents("tr").find("td").eq(0).text()).split("-",1);
		let Semestre = $(this).parents("tr").find("td").eq(1).text();
		let anio = $(this).parents("tr").find("td").eq(2).text();
			
		var link = "ServeletCurso?Materia="+Materia+"&Semestre="+Semestre+"&anio="+anio;
		$("#codigo-curso").attr("href", link);

	});
</script>
